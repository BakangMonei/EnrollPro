<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:ignore="MissingConstraints"
    android:background="@color/black"
    tools:context=".Activities.BookExamActivity">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/forumregular"
        android:text="Book Exam"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/moduleLeaderEmailTxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_forms"
        android:ems="10"
        android:hint="Module Leader Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:fontFamily="@font/forumregular"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/moduleLeaderNameTxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_forms"
        android:ems="10"
        android:hint="Module-Leader Name"
        android:inputType="text"
        android:textColor="@color/white"
        android:fontFamily="@font/forumregular"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/moduleLeaderEmailTxt"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/moduleLeaderEmailTxt"
        app:layout_constraintTop_toBottomOf="@+id/moduleLeaderEmailTxt" />

    <EditText
        android:id="@+id/studentEmailTxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_forms"
        android:ems="10"
        android:hint="Student Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:fontFamily="@font/forumregular"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/moduleLeaderNameTxt"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/moduleLeaderNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/moduleLeaderNameTxt" />

    <EditText
        android:id="@+id/studentIDNumberTxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_forms"
        android:ems="10"
        android:hint="StudentID"
        android:inputType="text"
        android:textColor="@color/white"
        android:fontFamily="@font/forumregular"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/studentEmailTxt"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/studentEmailTxt"
        app:layout_constraintTop_toBottomOf="@+id/studentEmailTxt" />

    <EditText
        android:id="@+id/firstNameTxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_forms"
        android:ems="10"
        android:hint="Student firstName"
        android:inputType="text"
        android:textColor="@color/white"
        android:fontFamily="@font/forumregular"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/studentIDNumberTxt"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/studentIDNumberTxt"
        app:layout_constraintTop_toBottomOf="@+id/studentIDNumberTxt" />
    <EditText
        android:id="@+id/lastNameTxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_forms"
        android:ems="10"
        android:hint="Student Lastname"
        android:inputType="text"
        android:textColor="@color/white"
        android:fontFamily="@font/forumregular"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/firstNameTxt"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/firstNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/firstNameTxt" />
    <EditText
        android:id="@+id/phoneNumberTxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_forms"
        android:ems="10"
        android:hint="Student Phone Number"
        android:inputType="text"
        android:textColor="@color/white"
        android:fontFamily="@font/forumregular"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/lastNameTxt"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/lastNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/lastNameTxt" />
    <EditText
        android:id="@+id/examRoomTxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_forms"
        android:ems="10"
        android:hint="Exam Room And Table Number"
        android:inputType="text"
        android:textColor="@color/white"
        android:fontFamily="@font/forumregular"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/phoneNumberTxt"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/phoneNumberTxt"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberTxt" />

    <EditText
        android:id="@+id/facultyTxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_forms"
        android:ems="10"
        android:hint="Faculty"
        android:inputType="text"
        android:textColor="@color/white"
        android:fontFamily="@font/forumregular"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/examRoomTxt"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/examRoomTxt"
        app:layout_constraintTop_toBottomOf="@+id/examRoomTxt" />
    <EditText
        android:id="@+id/moduleNameTxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_forms"
        android:ems="10"
        android:hint="Module Name"
        android:inputType="text"
        android:textColor="@color/white"
        android:fontFamily="@font/forumregular"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/facultyTxt"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/facultyTxt"
        app:layout_constraintTop_toBottomOf="@+id/facultyTxt" />

    <EditText
        android:id="@+id/dateAndTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_forms"
        android:hint="Select Date and Time"
        android:textColor="@color/white"
        android:fontFamily="@font/forumregular"
        android:textColorHint="@color/white"
        android:focusable="false"
        android:clickable="true"
        android:padding="10dp"
        android:drawableEnd="@drawable/baseline_access_time_24"
        android:drawablePadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moduleNameTxt" />


    <Button
        android:id="@+id/sendQRBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_btn"
        android:fontFamily="@font/forumregular"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="Send QR"
        app:layout_constraintStart_toStartOf="@+id/dateAndTimeEditText"
        app:layout_constraintTop_toBottomOf="@+id/dateAndTimeEditText" />

    <Button
        android:id="@+id/viewExamsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="80dp"
        android:text="View Exams"
        android:background="@drawable/login_btn"
        android:fontFamily="@font/forumregular"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/dateAndTimeEditText"
        app:layout_constraintTop_toBottomOf="@+id/dateAndTimeEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>